<h1 class="login-title">Add New Inventory Item</h1>

<% if (messages) { %>
<div><%- messages() %></div>
<% } %>

<form
  id="inventoryForm"
  action="/inv/add/classification"
  method="post"
  enctype="multipart/form-data"
>
  <div class="form-group">
    <label for="invMake">Make:</label>
    <input
      type="text"
      id="invMake"
      name="inv_make"
      class="form-control"
      required
      value="<%= typeof inv_make != 'undefined' ? inv_make : '' %>"
    />
  </div>
  <div class="form-group">
    <label for="invModel">Model:</label>
    <input
      type="text"
      id="invModel"
      name="inv_model"
      class="form-control"
      required
      value="<%= typeof inv_model != 'undefined' ? inv_model : '' %>"
    />
  </div>
  <div class="form-group">
    <label for="invYear">Year:</label>
    <input
      type="number"
      id="invYear"
      name="inv_year"
      class="form-control"
      required
      value="<%= typeof inv_year != 'undefined' ? inv_year : '' %>"
    />
  </div>
  <div class="form-group">
    <label for="invDescription">Description:</label>
    <textarea
      id="invDescription"
      name="inv_description"
      class="form-control"
      required
    >
<%= typeof inv_description != 'undefined' ? inv_description : '' %></textarea
    >
  </div>
  <div class="form-group">
    <label for="invPrice">Price:</label>
    <input
      type="number"
      id="invPrice"
      name="inv_price"
      class="form-control"
      required
      value="<%= typeof inv_price != 'undefined' ? inv_price : '' %>"
    />
  </div>
  <div class="form-group">
    <label for="invMiles">Miles:</label>
    <input
      type="number"
      id="invMiles"
      name="inv_miles"
      class="form-control"
      required
      value="<%= typeof inv_miles != 'undefined' ? inv_miles : '' %>"
    />
  </div>
  <div class="form-group">
    <label for="invColor">Color:</label>
    <input
      type="text"
      id="invColor"
      name="inv_color"
      class="form-control"
      required
      value="<%= typeof inv_color != 'undefined' ? inv_color : '' %>"
    />
  </div>
  <div class="form-group">
    <label for="classificationId">Classification:</label>
    <select
      id="classificationId"
      name="classification_id"
      class="form-control"
      required
    >
      <% classifications.forEach(function(classification) { %>
      <option value="<%= classification.classification_id %>">
        <%= classification.classification_name %>
      </option>
      <% }); %>
    </select>
  </div>
  <div class="form-group">
    <label for="invImage">Image Path:</label>
    <input
      type="text"
      id="invImage"
      name="inv_image"
      class="form-control"
      required
      value="<%= typeof inv_image != 'undefined' ? inv_image : '' %>"
    />
  </div>
  <div class="form-group">
    <label for="invThumbnail">Thumbnail Path:</label>
    <input
      type="text"
      id="invThumbnail"
      name="inv_thumbnail"
      class="form-control"
      required
      value="<%= typeof inv_thumbnail != 'undefined' ? inv_thumbnail : '' %>"
    />
  </div>
  <button type="submit" class="submit-button">Add Inventory Item</button>
</form>
