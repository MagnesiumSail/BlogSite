<%- messages() %>
<h1><%= title %></h1>

  <h2>Account Update</h2>
  <form id="account-update-form" action="/account/update" method="POST">
    <label for="first-name">First Name:</label>
    <input type="text" id="first-name" name="first-name" value="<%= accountName %>" required>

    <label for="last-name">Last Name:</label>
    <input type="text" id="last-name" name="last-name" value="<%= accountLName %>" required>

    <label for="email">Email Address:</label>
    <input type="email" id="email" name="email" value="<%= accountEmail %>" required>

    <input type="hidden" name="account-id" value="<%= clientId %>">

    <input type="submit" value="Update Account">
  </form>

  <h2>Change Password</h2>
  <form id="change-password-form" action="/account/change-password" method="POST">
    <p>By entering a new password, your current password will be changed.</p>
    <p>Password requirements: [Add your password requirements here]</p>

    <label for="new-password">New Password:</label>
    <input type="password" id="new-password" name="new-password" required>

    <input type="hidden" name="account-id" value="<%= clientId %>">

    <input type="submit" value="Change Password">
  </form>