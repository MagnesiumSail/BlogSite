<div class="registration-container">
    <h1 class="registration-title"><%- title %></h1>
    <% messages() %>
    <form class="registration-form" action="/account/register" method="post">
        <div class="input-group">
            <label for="first-name">First name</label>
            <input type="text" id="first-name" name="account_firstname" class="input-field" required>
        </div>
        <div class="input-group">
            <label for="last-name">Last name</label>
            <input type="text" id="last-name" name="account_lastname" class="input-field" required>
        </div>
        <div class="input-group">
            <label for="email">Email address</label>
            <input type="email" id="email" name="account_email" class="input-field" required>
        </div>
        <div class="input-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="account_password" class="input-field" required>
        </div>
        <button type="submit" class="register-button">Register</button>
    </form>
</div>
