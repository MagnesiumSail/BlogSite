    <span class="siteName">
        <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <div class="tooled" id="tools">
        <% if (clientIsLoggedIn) { %>
            <!-- Visible only when the client is logged in -->
            <!-- I need to do all the checking here, not passing a variable named accountName-->
            <a href="/account">Welcome <%= accountName %> | </a>
            <a href="/logout">Logout</a>
          <% } else { %>
