<h1 id="greeting">Welcome to CSE Motors!</h1>
<%- messages() %>

<div class="image-container">
  <picture>
    <source media="(min-width: 500px)" srcset="/images/vehicles/delorean.jpg" />
    <img
      class="full-img"
      src="/images/vehicles/delorean-tn.jpg"
      alt="Car of Car"
    />
  </picture>
  <div class="text-overlay">
    <b>DMC Delorean</b><br />
    3 cup holders<br />
    Superman doors<br />
    Fuzzy dice!<br />
    <button class="overlay-button">Own Today</button>
  </div>
</div>
