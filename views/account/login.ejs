<%- messages() %>
<main class="login-container">
    <h1 class="login-title"><%= title %></h1>
    <form class="login-form" action="/account/login" method="post">
      <div class="form-group">
        <label for="email">Email:</label>
        <input type="email" id="email" name="username" class="form-control" required />
      </div>
      <div class="form-group">
        <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" class="form-control" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required />
      </div>
      <button type="submit" class="btn btn-primary">Login</button>
    </form>

    <p class="register-prompt">Don't have an account? <a href="/account/register" class="register-link">Register here</a></p>
  </main>
