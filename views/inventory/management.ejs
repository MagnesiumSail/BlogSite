<%- messages() %>
<h1 class="inv-title"><%= title %></h1>

<a href="/inv/add/classification" class="inv-add-classification-link">Add Classification</a>
<a href="/inv/add/inventory" class="inv-add-inventory-link">Add Inventory</a>
<h2 class="inv-manage-header">Manage Inventory</h2>
<p class="inv-select-instruction">Select classification from list to see items</p>

<select id="classificationList" class="inv-classification-select" onchange="updateInventoryDisplay()">
  <% classificationSelect.forEach(function(classification) { %>
    <option value="<%= classification.classification_id %>" class="inv-classification-option"><%= classification.classification_name %></option>
  <% }); %>
</select>

<table id="inventoryDisplay" class="inv-inventory-table">
    <!-- This table will be populated by JavaScript -->
</table>

<noscript class="inv-noscript-warning">JavaScript must be enabled to use this page.</noscript>

<script src="../../js/inventory.js" class="inv-inventory-script"></script>